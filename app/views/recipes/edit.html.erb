<h1> edit recipe </h1>


<br>
<%= form_tag "/recipes/#{@recipe.id}", method: :patch  do %>
<ul>
<li><h4><%= label_tag :Title, @recipe.title %>
<%= text_field_tag :title %></li>
<br>
<li><h4><%= label_tag :chef, @recipe.chef %>
<%= text_field_tag :chef %></li>
<br>
<li><h4><%= label_tag :Ingredients, @recipe.Ingredients  %>
<%= text_field_tag :Ingredients %></li>
<br>
<li><h4><%= label_tag :Directions, @recipe.directions %>
<%= text_field_tag :Directions %></li>
<br>
<%= submit_tag "Add Recipe" %></ul>
<% end %>